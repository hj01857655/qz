# 教务系统环境变量配置模板
# 复制此文件为 .env 并填入真实值

# ================================
# 教务系统登录凭据
# ================================
EDU_USERNAME=your_student_id_here
EDU_PASSWORD=your_password_here
EDU_SCHOOL=10

# ================================
# 数据库配置
# ================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_db_password_here
DB_NAME=educational_system

# ================================
# Redis配置
# ================================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0

# ================================
# 应用配置
# ================================
# 日志级别: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 教务系统基础URL
EDU_BASE_URL=http://oa.csmu.edu.cn:8099
EDU_LOGIN_URL=http://oa.csmu.edu.cn:8099/jsxsd/xk/LoginToXk
EDU_ACHIEVEMENT_URL=http://oa.csmu.edu.cn:8099/jsxsd/kscj/cjcx_list
EDU_CURRICULUM_URL=http://oa.csmu.edu.cn:8099/jsxsd/xskb/xskb_list.do

# ================================
# 安全配置
# ================================
# 会话超时时间（秒）
SESSION_TIMEOUT=3600
# 最大重试次数
MAX_RETRY_COUNT=3
# 验证码识别超时时间（秒）
OCR_TIMEOUT=10
